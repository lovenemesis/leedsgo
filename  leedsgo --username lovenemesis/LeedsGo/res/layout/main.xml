<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:id="@+id/MainFrame"
	 android:layout_width="fill_parent"
	 android:layout_height="fill_parent"
	 xmlns:android="http://schemas.android.com/apk/res/android">
	<RelativeLayout android:layout_alignParentTop="true"
		 android:layout_height="wrap_content"
		 android:id="@+id/TopBar"
		 android:background="#1F8FFF"
		 android:layout_width="fill_parent">
		<TextView android:id="@+id/title_portal"
		 android:text="@string/title_portal"
		 android:textColor="#EEEEEE"
		 android:textSize="15sp"
		 android:padding="2px"
		 android:layout_alignParentLeft="true"
		 android:layout_width="wrap_content"
		 android:layout_height="wrap_content"/>
		<TextView android:layout_alignParentRight="true"
		 android:layout_height="wrap_content"
		 android:id="@+id/title_uol"
		 android:text="@string/title_uol"
		 android:textColor="#EEEEEE"
		 android:textSize="15sp"
		 android:padding="2px"
		 android:layout_width="wrap_content"/>
	</RelativeLayout>
	<ScrollView android:id="@+id/ScrollView"
		 android:layout_height="fill_parent"
		 android:layout_width="fill_parent"
		 android:background="#EBF6FB"
		 android:layout_below="@id/TopBar" >
		<LinearLayout android:layout_height="wrap_content"
		 android:id="@+id/LinearLayout01" 
		 android:orientation="vertical"
		 android:layout_width="fill_parent">
			<TextView android:text="@string/title_library"
			 android:layout_height="wrap_content"
			 android:layout_width="fill_parent"
			 android:textSize="25sp"
			 android:textStyle="bold"
			 android:textColor="#000000"
			 android:layout_margin="7dip"
			 android:clickable="true"
			 android:drawableLeft="@drawable/library"
			 android:id="@+id/text_title_library"/>
			<View android:layout_height="2px"
				android:layout_width="fill_parent"
				android:background="#DDD6C6"/>
			<TextView android:text="@string/title_email"
			 android:layout_height="wrap_content"
			 android:layout_width="fill_parent"
			 android:textSize="25sp"
			 android:textStyle="bold"
			 android:textColor="#000000"
			 android:layout_margin="7dip"
			 android:clickable="true"
			 android:drawableLeft="@drawable/email"
			 android:id="@+id/text_title_email"/>
			<View android:layout_height="2px"
				android:layout_width="fill_parent"
				android:background="#DDD6C6"/>
			<TextView android:text="@string/title_rss"
			 android:layout_height="wrap_content"
			 android:layout_width="fill_parent"
			 android:textSize="25sp"
			 android:textStyle="bold"
			 android:textColor="#000000"
			 android:layout_margin="7dip"
			 android:clickable="true"
			 android:drawableLeft="@drawable/rss"
			 android:id="@+id/text_title_rss"/>
			<View android:layout_height="2px"
				android:layout_width="fill_parent"
				android:background="#DDD6C6"/> 
			<TextView android:text="@string/title_map"
			 android:layout_height="wrap_content"
			 android:layout_width="fill_parent"
			 android:textSize="25sp"
			 android:textStyle="bold"
			 android:textColor="#000000"
			 android:layout_margin="7dip"
			 android:clickable="true"
			 android:drawableLeft="@drawable/map"
			 android:id="@+id/text_title_map"/>
			<View android:layout_height="2px"
				android:layout_width="fill_parent"
				android:background="#DDD6C6"/>
		</LinearLayout>
	</ScrollView>
	<RelativeLayout android:layout_alignParentBottom="true"
		 android:layout_height="wrap_content"
		 android:id="@+id/BottomBar"
		 android:background="#DDD6C6"
		 android:layout_width="fill_parent">
		<Button android:layout_height="wrap_content"
		 android:layout_width="wrap_content"
		 android:id="@+id/button_about_uol" 
		 android:text="@string/about_uol"
		 android:layout_alignParentLeft="true"/>
		<Button android:layout_height="wrap_content"
		 android:layout_width="wrap_content"
		 android:id="@+id/button_about_iss" 
		 android:text="@string/about_iss"
		 android:layout_centerInParent="true"/>
		<Button android:layout_height="wrap_content"
		 android:layout_width="wrap_content"
		 android:id="@+id/button_about_me" 
		 android:text="@string/about_me"
		 android:layout_alignParentRight="true"/>
	</RelativeLayout>
</RelativeLayout>